<!DOCTYPE html>
<html lang="mk">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] MoviePlex</title>

    <!-- ✅ Bootstrap CDN -->
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet">

    <!-- ✅ Твој CSS -->
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
</head>
<body>
    <!-- ✅ Navbar -->
    <nav class="navbar navbar-expand-lg navbar-dark bg-dark">
        <div class="container">
            <a class="navbar-brand" asp-controller="Home" asp-action="Index">MoviePlex</a>

            <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarContent"
                    aria-controls="navbarContent" aria-expanded="false" aria-label="Toggle navigation">
                <span class="navbar-toggler-icon"></span>
            </button>

            <div class="collapse navbar-collapse" id="navbarContent">
                <ul class="navbar-nav ms-auto mb-2 mb-lg-0">
                    <li class="nav-item">
                        <a class="nav-link" asp-controller="Movies" asp-action="Index">Филмови</a>
                    </li>
                    @if (User.Identity?.IsAuthenticated ?? false)
                    {
                        <li class="nav-item me-2">
                            <a class="btn btn-nav" asp-controller="Movies" asp-action="Create">Додај филм</a>
                        </li>
                        <li class="nav-item">
                            <form method="post" asp-controller="Account" asp-action="Logout" class="d-inline">
                                <button type="submit" class="btn btn-nav">Одјави се</button>
                            </form>
                        </li>
                    }
                    else
                    {
                        <li class="nav-item">
                            <a class="btn btn-nav" asp-controller="Account" asp-action="Login">Најави се</a>
                        </li>
                    }
                </ul>
            </div>
        </div>
    </nav>

    <!-- ✅ Main content -->
    <main role="main" class="container my-4">
        @if (TempData["Toast"] is string toast)
        {
            <div class="alert alert-success" role="alert">@toast</div>
        }

        @RenderBody()
    </main>

    <!-- ✅ Footer -->
    <footer class="text-center py-4 bg-dark text-white">
    <div class="container text-center">
        &copy; 2025 - MoviePlex<br />
        <small>Made by Marija Mancheva</small>
    </div>
</footer>

    <!-- ✅ Bootstrap Bundle (JS + Popper) CDN -->
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js"></script>

    <!-- ✅ Твој JS -->
    <script src="~/js/site.js"></script>

    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
