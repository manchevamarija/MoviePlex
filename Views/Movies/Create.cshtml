@model string

@{
    ViewData["Title"] = "Додади филм";
}

<div class="d-flex justify-content-center align-items-center" style="min-height: 100vh;">
    <div class="card shadow-lg p-4 text-center form-container" style="max-width: 400px; width: 100%;">
        <h2 class="mb-4 text-uppercase fw-bold" style="font-style: normal; color: #red; font-weight: 700;">Додади филм</h2>

        @if(ViewData.ModelState.ErrorCount > 0)
        {
            <div class="alert alert-danger text-center">
                @foreach(var error in ViewData.ModelState.Values.SelectMany(v => v.Errors))
                {
                    <div>@error.ErrorMessage</div>
                }
            </div>
        }

        <form asp-action="Create" method="post">
            <input type="text" name="title" class="form-control mb-3" placeholder="Напиши наслов..." value="@Model" required />
            <button class="btn btn-primary w-100" type="submit">Додади филм</button>
        </form>

        @if(TempData["Toast"] != null)
        {
            <div class="mt-3 alert alert-success text-center">
                @TempData["Toast"]
            </div>
        }
    </div>
</div>