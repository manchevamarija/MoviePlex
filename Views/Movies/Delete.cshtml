@model MoviesApp.ViewModels.DeleteMovieViewModel

@{
    ViewData["Title"] = "Избриши филм";
}

<div class="d-flex justify-content-center align-items-center" style="min-height: 100vh;">
    <div class="card shadow-lg p-4 form-container" style="max-width: 700px; width: 100%; text-align: center;">
        <h2 class="mb-4" style="color: #ff4444; font-weight: 700;">Дали сте сигурни дека сакате да го избришете филмот?</h2>

        <div class="card p-3 shadow-sm mb-4 d-flex flex-column flex-md-row align-items-center" 
             style="background: linear-gradient(145deg, #1f0000 0%, #4d0000 100%);">
            <div class="mb-3 mb-md-0 me-md-4 d-flex justify-content-center align-items-center" 
                 style="width: 300px; height: 400px;">
                @if (!string.IsNullOrWhiteSpace(Model.PosterUrl))
                {
                    <img src="@Model.PosterUrl" alt="Poster" 
                         class="img-fluid rounded-3" 
                         style="max-width: 100%; max-height: 100%; object-fit: cover; box-shadow: 0 4px 10px rgba(0,0,0,0.5);" />
                }
                else
                {
                    <div class="d-flex align-items-center justify-content-center bg-dark rounded-3 w-100 h-100">
                        <span class="text-muted">Нема постер</span>
                    </div>
                }
            </div>

            <div class="text-start flex-grow-1" style="color: #e0e0e0;">
                <p><strong>Наслов:</strong> <span style="color: #ff6666;">@Model.Title</span></p>
                <p><strong>Година:</strong> <span style="color: #ff6666;">@Model.Year</span></p>
                <p><strong>Жанр:</strong> <span style="color: #ff6666;">@Model.Genre</span></p>
                <p><strong>Краток опис:</strong> <span style="color: #ff6666;">@Model.Plot</span></p>
            </div>
        </div>

        <form asp-action="Delete" method="post">
            <input type="hidden" asp-for="Id" />
            <div class="d-flex justify-content-center gap-3 flex-wrap">
                <button type="submit" class="btn btn-danger btn-lg">Избриши</button>
                <a asp-action="Index" asp-controller="Movies" class="btn btn-secondary btn-lg">Откажи</a>
            </div>
        </form>
    </div>
</div>
